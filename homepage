function displaySeekerHome(){
	
	$userid = $_COOKIE['userid'];
	$usertypeinput = "<input type='hidden' name='userid' value='$userid'>";
	
	$rs = selectSeekerById($userid);
	$userinfo = mysqli_fetch_assoc($rs);
	
	
?>
	
	<form method="get" >
	
			
		<fieldset>
	   	<legend><b>Welcome <?php echo $userinfo['FirstName'] . " " . $userinfo['LastName'] ?> </b></legend>
			<h3>Select the action you would like to take:</h3>
			<div style="float:left; overflow:hidden; ">
				<body style="background-color:lightblue">
				<?php echo $usertypeinput ?>

				<input type="submit" id="createresume" name="createresume" value="Create Resume"><br><br>
				<input type="submit" id="viewedit" name="viewedit" value="View or Edit Resume"><br><br>
				<input type="submit" id="logout" name="logout" value="Logout"><br><br>															
				
			</div>

		</fieldset>	
		
	</form>
		
<?php 	
}

function displayEmployerHome(){
	
	$userid = $_COOKIE['userid'];
	$usertypeinput = "<input type='hidden' name='userid' value='$userid'>";
	
	$rs = selectEmployerById($userid);
	$userinfo = mysqli_fetch_assoc($rs);
	
?>
	
	<form method="get" >
	
			
		<fieldset>
	   	<legend><b>Welcome <?php echo $userinfo['ContactFirstName'] . " " . $userinfo['ContactLastName'] ?> </b></legend>
			<h3>Select the action you would like to take:</h3>
			<div style="float:left; overflow:hidden; ">
				<body style="background-color:lightblue">
				<?php echo $usertypeinput ?>

				<input type="submit" id="employerquiz" name="employerquiz" value="Search for applicants"><br><br>
				<input type="submit" id="logout" name="logout" value="Logout"><br><br>															
				
			</div>

		</fieldset>	
		
	</form>
		
<?php 
}	
	
?>
