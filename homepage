<?php 

session_start();
include 'dboperation.php';

if(isset($_GET['signup']))
	displayEmpOrSeeker();
else if(isset($_POST['createjobseekeraccount'])){
	$_SESSION['usertype'] = 'seeker';
	header("Refresh: 0; signup.php");
} else if(isset($_POST['createemployeraccount'])) {
	$_SESSION['usertype'] = 'employer';
	header("Refresh: 0; signup.php");
} else if(isset($_COOKIE['userid'])){
	if($_COOKIE['usertype'] == "seeker"){
		if(isset($_GET['createresume'])){
			$_SESSION['fromedit'] = 0;
			$_SESSION['firstrun'] = 1;
			header("Refresh: 0; createresume.php");
		}
		else if(isset($_GET['viewedit'])){
			$userid = $_GET['userid'];
			header("Refresh: 0; customresume.php?userid=$userid");
		} else if( isset($_GET['logout'])){
			$cookie_name = "userid";
			setcookie($cookie_name, -1, time() - 1000, "/"); 
			$cookie_name = "usertype";
			setcookie($cookie_name, "", time() - 1000, "/");
			header("Refresh: 0;");
		}
		else 			
			displaySeekerHome();	
	}
	elseif($_COOKIE['usertype'] = "employer"){
		if(isset($_GET['employerquiz'])){
			header("Refresh: 0; employerquiz.php");
		}		
		else if( isset($_GET['logout'])){
			$cookie_name = "userid";
			setcookie($cookie_name, -1, time() - 1000, "/"); 
			$cookie_name = "usertype";
			setcookie($cookie_name, "", time() - 1000, "/");
			header("Refresh: 0;");
		} else 
			displayEmployerHome();
	
	}
		
		
	else
		displayHomePage();	
} else
	displayHomePage();


?>

<?php 

